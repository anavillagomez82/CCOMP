#include <SFML/Graphics.hpp>
#include <iostream>

int main()
{
    // Crear la ventana del juego
    sf::RenderWindow window(sf::VideoMode(800, 600), "Pantalla de Inicio");

    // Letra para el texto
    sf::Font font;
    if (!font.loadFromFile("arial.ttf")) 
    {
        std::cerr << "Error cargando la fuente!" << std::endl;
        return -1;
    }

    // Título del juego
    sf::Text title("Rebel Point", font, 50);
    title.setFillColor(sf::Color::White);
    title.setStyle(sf::Text::Bold);
    title.setPosition(250, 100); // Posiciona el título en el centro

    // Texto  "Iniciar Juego"
    sf::Text startText("Presiona Enter para empezar", font, 30);
    startText.setFillColor(sf::Color::Green);
    startText.setPosition(200, 300);

    // Texto "Salir"
    sf::Text exitText("Presiona Esc para salir", font, 30);
    exitText.setFillColor(sf::Color::Red);
    exitText.setPosition(200, 400);

    // Bucle del juego
    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            // Si presiona el botón de cerrar se cierra el juego
            if (event.type == sf::Event::Closed)
                window.close();

            // Segun la tecla presionada lo que se hace
            if (event.type == sf::Event::KeyPressed)
            {
                if (event.key.code == sf::Keyboard::Enter)
                {
                    std::cout << "Iniciar el juego!" << std::endl;
                    // Aquí es donde empezaría el juego o cambiaría de pantalla
                }
                else if (event.key.code == sf::Keyboard::Escape)
                {
                    window.close(); // Cierra el juego
                }
            }
        }

        // Limpia pantalla
        window.clear();

        // Dibujar los textos en la pantalla
        window.draw(title);
        window.draw(startText);
        window.draw(exitText);

        // Muestra pantalla actualizada
        window.display();
    }

    return 0;
}
